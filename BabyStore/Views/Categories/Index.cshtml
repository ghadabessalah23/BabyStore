@model IEnumerable<BabyStore.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<h2>@ViewBag.Title</h2>

<p>
    <button type="button" class="btn btn-success"> @Html.ActionLink("Create New", "Create")</button>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.ActionLink(item.Name, "Index", "Products", new { category = item.Name }, null)
    </td>
    <td>
        <button type="button" class="btn btn-warning">
            @Html.ActionLink("Edit", "Edit", new { id = item.ID })
        </button> |
        <button type="button" class="btn btn-primary">
            @Html.ActionLink("Details", "Details", new { id = item.ID })
        </button> |
        <button type="button" class="btn btn-danger"> @Html.ActionLink("Delete", "Delete", new { id = item.ID })</button>
</td>
</tr>}
</thead>
</table>
